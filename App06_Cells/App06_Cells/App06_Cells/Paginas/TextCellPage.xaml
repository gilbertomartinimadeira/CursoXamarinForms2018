<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App06_Cells.Paginas.TextCellPage">
    <ContentPage.Content>
        <ListView x:Name="listViewFuncionarios" BackgroundColor="LightYellow" SeparatorColor="Black">
            <ListView.ItemTemplate>
                <DataTemplate >
                    <TextCell 
                        Text="{Binding Nome}" 
                        Detail="{Binding Cargo}" 
                        TextColor="Blue" 
                        DetailColor="Gray"
                        />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>