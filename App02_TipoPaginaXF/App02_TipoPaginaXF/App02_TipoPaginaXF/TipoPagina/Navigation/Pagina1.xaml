<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02_TipoPaginaXF.TipoPagina.Navigation.Pagina1"
             Title="Pagina 1">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" IconImageSource="xamarin.png"/>
        <ToolbarItem Text="Detalhes" IconImageSource="xamarin.png"/>
        <ToolbarItem Text="Ordenar" IconImageSource="xamarin.png"/>
        
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eu sou a pagina 1"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Ir para a página 2" Clicked="MoverParaPagina2"></Button>

            <Button Text="Chamar Modal" Clicked="ChamarModal"/>
            <Button Text="Chamar Master" Clicked="ChamarMaster"/> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>