<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControleXF.Controles.TableViewPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Settings"><!-- Páginas de configuração -->
                <TableRoot>
                    <TableSection Title="Backup">
                        <SwitchCell Text="Backup das Imagens" On="False"/>
                        <SwitchCell Text="Backup dos textos" On="False"/>
                        <SwitchCell Text="Backup do chat" On="False"/>
                        <ViewCell >
                            <StackLayout Orientation="Horizontal" >
                                <Label Text="Backup Frequencia Semanal"></Label>

                                <Slider Minimum="0" Maximum="7" HorizontalOptions="FillAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="Segurança">
                        <SwitchCell Text="Senhas Criptografadas" On="True"></SwitchCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>