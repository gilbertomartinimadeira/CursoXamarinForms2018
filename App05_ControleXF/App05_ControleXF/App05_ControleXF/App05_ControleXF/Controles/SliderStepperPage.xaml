<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControleXF.Controles.SliderStepperPage">
    <ContentPage.Content>
        <StackLayout>
            <Slider Minimum="0"
                    Maximum="100"
                    Value="40"
                    ValueChanged="ValorMudou"
                    ></Slider>

            <Label x:Name="lblValor"></Label>

            <Stepper 
                     Minimum="0"
                     Maximum="100"
                     Value="40"
                     Increment="2"
                        ValueChanged="Stepper_ValueChanged"
                     >
                
            </Stepper>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>