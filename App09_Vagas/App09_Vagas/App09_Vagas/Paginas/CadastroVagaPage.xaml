<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App09_Vagas.Paginas.CadastroVagaPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Nome" Placeholder="Vaga"/>
            <Entry x:Name="Empresa" Placeholder="Empresa"/>
            <Entry x:Name="Quantidade" Placeholder="Quantidade"/>
            <Entry x:Name="Cidade" Placeholder="Cidade"/>
            <Entry x:Name="Salario" Placeholder="Salário"/>
            
            <Editor x:Name="Descricao" Placeholder="Descrição do cargo" HeightRequest="200"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Tipo de Contratação" />
                <Label Text="CLT"></Label>
                <Switch x:Name="TipoContratacao" OnColor="LightGreen"/>
                <Label Text="PJ"></Label>
            </StackLayout>
            <Entry x:Name="Telefone" Placeholder="Telefone"/>
            <Entry x:Name="Email" Placeholder="Email"/>

            <Button Text="Salvar" Clicked="SalvarAction"/>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>